
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Routine List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Routine" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>
                &nbsp;
                Add New Routine
            </a>
        </div>
    </div>
