@model EquipmentMaintenance.Models.ViewModels.WorkOrderVM


<form method="post" asp-action="Edit">
    
    <input asp-for="WorkOrder.Id" hidden />
    <input asp-for="WorkOrder.WorkOrderRoutineId" hidden/>
    <input asp-for="WorkOrder.WeekNumber" hidden />

    <div class="border p-3 mt-4 row">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Work Order Resource</h2>
            <hr/>
        </div>
        @*<div asp-validation-summary="All"></div>*@
        
            <div class="col-12">
                <div class="row">
                    <div class="mb-3 col-6">
                        <label asp-for="WorkOrder.WorkOrderNumber">Work Order Number</label>
                        <input asp-for="WorkOrder.WorkOrderNumber" class="form-control" readonly/> 
                     </div>
                     <div class="mb-3 col-6">
                        <label asp-for="WorkOrder.EquipmentId">Item</label>
                        <select asp-for="WorkOrder.EquipmentId" asp-items="@Model.Equipment" class="form-select" readonly>
                        </select>
                    </div>
                    <div class="mb-3 col-6">
                        <label asp-for="WorkOrder.JobDescription">Job Description</label>
                        <input asp-for="WorkOrder.JobDescription" class="form-control" readonly/>
                    </div>
                    <div class="mb-3 col-6">
                        <label asp-for="WorkOrder.DateCreated">Created</label>
                        <input asp-for="WorkOrder.DateCreated" class="form-control" id="createdDate" type="date" readonly/>
                        <span asp-validation-for="WorkOrder.DateCreated" class="text-danger"></span>
                    </div>
                    <div class="mb-3 col-6">
                        <label asp-for="WorkOrder.DateDue">Date Due</label>
                        <input asp-for="WorkOrder.DateDue" class="form-control" id="dueDate" type="date" readonly/>
                    </div>
                    <div class="mb-3 col-6">
                        <label asp-for="WorkOrder.DateOverdue">Date Overdue</label>
                        <input asp-for="WorkOrder.DateOverdue" class="form-control" id="overdueDate" type="date" readonly/>
                    </div>
                    <div class="mb-3 col-6">
                        <label asp-for="WorkOrder.ApplicationUserId"></label>
                        <select asp-for="WorkOrder.ApplicationUserId" asp-items="@Model.ApplicationUsers" class="form-select" style="background-color:#FAEBD7;">
                         <option disabled selected>--Select Technician--</option>
                        </select>
                    </div>
                    <div class="mb-3 col-6 text-left" style="margin-top:auto;">
                        <label asp-for="WorkOrder.CompletedFlag">Completed</label>
                        <input asp-for="WorkOrder.CompletedFlag" class="form-control-input" type="checkbox" disabled/>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-3 ml-2">
                        <button type="submit" id="submitButton" class="btn btn-primary" style="width:150px">Update</button>
                    </div>
                    <div class="col-3 text-end mr-2">    
                        <a asp-controller="WorkOrder" asp-action="Index" class="btn btn-secondary" style="width:150px;">Back to List</a>
                    </div>
                </div>     
            </div>
            
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script src="~/js/WorkOrder/changeDatesFormat.js"></script>
}

