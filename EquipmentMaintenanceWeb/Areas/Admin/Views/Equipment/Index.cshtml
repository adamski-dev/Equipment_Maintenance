
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Equipment List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Equipment" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>
                &nbsp;
                Add New Equipment
            </a>
        </div>
    </div>
    <table id="tableData" class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Identifier</th>
                    <th>Description</th>
                    <th>Model Number</th>
                    <th>Serial Number</th>
                    <th>In Service</th>
                    <th>Equipment Type</th>
                    <th>Location</th>
                    <th>Date Added</th>
                    <th></th>
                </tr>
            </thead>
            
    </table>
</div>

@section Scripts{
    <script src="~/js/equipment.js"></script>
}
