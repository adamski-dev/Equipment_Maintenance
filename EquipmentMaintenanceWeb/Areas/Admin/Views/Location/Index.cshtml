@model IEnumerable<Location>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Location List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Location" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>
                &nbsp;
                Add New Location
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Location
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                    <td width="85%">
                        @obj.Name
                    </td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Location" asp-action="Edit" asp-route-id="@obj.Id"
                            class="btn btn-primary mx-2 btn-sm"><i class="bi bi-pencil-square"></i></a>

                            <a asp-controller="Location" asp-action="Delete" asp-route-id="@obj.Id"
                            class="btn btn-danger mx-2 btn-sm"><i class="bi bi-trash"></i></a>
                        </div>
                    </td>  
                </tr>
            }
        </tbody>
    </table>
</div>
