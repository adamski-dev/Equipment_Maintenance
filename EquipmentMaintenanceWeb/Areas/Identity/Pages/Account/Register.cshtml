@page
@using EquipmentMaintenance.Utility
@model RegisterModel

@if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Super_User))
{
    ViewData["Title"] = "Register - Admin Portal";
}
else
{
    ViewData["Title"] = "Register";
}

<div class="row pt-4">
    <div class="col-6 col-sm-10 col-md-8" style="margin:auto;">
        <form id="registerForm" class="row" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h1 style="color:#006666;">@ViewData["Title"]</h1>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating py-1 col-12">
                <input asp-for="Input.Email" class="form-control input-group-sm" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating py-1 col-sm-6 col-md-6">
                <input asp-for="Input.FirstName" class="form-control input-group-sm" aria-required="true" />
                <label asp-for="Input.FirstName"></label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating py-1 col-sm-6 col-md-6">
                <input asp-for="Input.Surname" class="form-control input-group-sm" aria-required="true" />
                <label asp-for="Input.Surname"></label>
                <span asp-validation-for="Input.Surname" class="text-danger"></span>
            </div>
            <div class="form-floating py-1 col-sm-6 col-md-6">
                <input asp-for="Input.Password" class="form-control input-group-sm" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating py-1 col-sm-6 col-md-6">
                <input asp-for="Input.ConfirmPassword" class="form-control input-group-sm"  aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Super_User))
            {
                <div class="form-floating py-2 col-6">
                    <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select">
                        <option disabled selected>-Select Role-</option>
                    </select>
                </div>
            }
            
            <div class="mt-2">
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
            </div>
            
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
